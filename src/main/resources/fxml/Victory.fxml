<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bomberman.controller.VictoryController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #3c0073, #7a007d, #ff003c);">

    <!-- Cercles lumineux -->
    <Circle radius="40" layoutX="100" layoutY="80" fill="rgba(255,255,255,0.1)"/>
    <Circle radius="30" layoutX="500" layoutY="120" fill="rgba(255,255,0,0.15)"/>
    <Circle radius="50" layoutX="300" layoutY="200" fill="rgba(255,0,255,0.1)"/>
    <Circle radius="25" layoutX="450" layoutY="300" fill="rgba(255,255,255,0.08)"/>

    <!-- VBox centrée horizontalement -->
    <VBox layoutY="40" spacing="10" prefWidth="400" alignment="CENTER"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">

        <Label fx:id="victoryLabel"
               text="💥 VICTOIRE ! 💥"
               style="-fx-font-size: 42px; -fx-text-fill: white; -fx-font-weight: bold;"
               alignment="center"
               prefWidth="400">
            <effect>
                <DropShadow radius="6" color="black"/>
            </effect>
        </Label>

        <Label
                text="Vous avez éliminé tous les bots !"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"
                alignment="center"
                prefWidth="400">
            <effect>
                <DropShadow radius="6" color="black"/>
            </effect>
        </Label>

        <Label fx:id="scoreLabel"
               text=""
               style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;"
               alignment="center"
               prefWidth="400">
            <effect>
                <DropShadow radius="6" color="black"/>
            </effect>
        </Label>
    </VBox>

    <!-- Bouton Rejouer -->
    <Button fx:id="playAgainButton"
            layoutY="260"
            text="🔁 Rejouer"
            prefWidth="200"
            prefHeight="45"
            layoutX="200"
            style="-fx-background-color: #00cc88;
                   -fx-text-fill: white;
                   -fx-font-size: 17px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 8;
                   -fx-padding: 8 16 8 16;">
        <effect>
            <DropShadow radius="3" color="black"/>
        </effect>
    </Button>

    <!-- Bouton Menu Principal -->
    <Button fx:id="mainMenuButton"
            layoutY="320"
            text="🏠 Menu Principal"
            prefWidth="200"
            prefHeight="45"
            layoutX="200"
            style="-fx-background-color: #3366ff;
                   -fx-text-fill: white;
                   -fx-font-size: 17px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 8;
                   -fx-padding: 8 16 8 16;">
        <effect>
            <DropShadow radius="3" color="black"/>
        </effect>
    </Button>

</AnchorPane>
