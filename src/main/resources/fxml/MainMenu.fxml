<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bomberman.controller.MainMenuController"
           prefWidth="800" prefHeight="600">

    <children>
        <!-- Image de fond (adapter le fitWidth si tu veux du plein Ã©cran) -->
        <ImageView fx:id="backgroundImage"
                   fitWidth="800"
                   fitHeight="600"
                   preserveRatio="false"
                   StackPane.alignment="CENTER"/>
        <!-- Boutons au centre -->
        <VBox alignment="CENTER" spacing="20">
            <children>
                <Button fx:id="playButton" text="JOUER" prefWidth="200" prefHeight="50">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Button>
                <Button fx:id="quitButton" text="QUITTER" prefWidth="200" prefHeight="50">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
        </VBox>
    </children>
</StackPane>
