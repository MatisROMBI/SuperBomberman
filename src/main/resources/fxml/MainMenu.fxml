<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      styleClass="main-menu" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bomberman.controller.MainMenuController">
    <children>
        <Label styleClass="title" text="BOMBERMAN">
            <font>
                <Font name="Arial Bold" size="48.0" />
            </font>
        </Label>
        <Button fx:id="playButton" prefHeight="50.0" prefWidth="200.0"
                styleClass="menu-button" text="JOUER">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
        </Button>
        <Button fx:id="quitButton" prefHeight="50.0" prefWidth="200.0"
                styleClass="menu-button" text="QUITTER">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>